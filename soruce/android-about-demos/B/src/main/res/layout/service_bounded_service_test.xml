<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bind"
            style="@style/btn.small"
            android:text="@string/bind" />

        <Button
            android:id="@+id/bindAutoCreate"
            style="@style/btn.small"
            android:text="BIND_AUTO_CREATE" />

        <Button
            android:id="@+id/bindAutoCreateInThread"
            style="@style/btn.small"
            android:text="BIND_AUTO_CREATE In Thread" />

    </LinearLayout>

    <Button
        android:id="@+id/unbind"
        style="@style/btn.small"
        android:text="@string/unbind" />

    <View style="@style/div" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start"
            style="@style/btn.small"
            android:text="@string/start" />

        <Button
            android:id="@+id/stop"
            style="@style/btn.small"
            android:text="@string/stop" />

    </LinearLayout>

    <Button
        android:id="@+id/getServiceStatus"
        style="@style/btn.small"
        android:text="@string/getServiceStatus" />

</LinearLayout>