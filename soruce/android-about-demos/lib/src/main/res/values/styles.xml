<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--   a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="color1">@android:color/holo_red_light</item>
        <item name="color2">@android:color/holo_blue_bright</item>
        <item name="drawable1">@android:drawable/star_big_off</item>
        <item name="drawable2">@android:drawable/star_big_on</item>

        <!-- change the activity background  -->
        <!--<item name="android:windowBackground">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- APPLY_THEME_START -->
    <style name="AppTheme.Red">
        <!--<item name="pageRootBg">@android:color/holo_red_dark</item>-->
        <item name="pageRootBg">@android:color/holo_red_light</item>
        <item name="seekThumbColor">#4CAF50</item>
        <item name="seekProgressDrawableColor">#2196F3</item>
        <item name="seekBg">#fff</item>

        <item name="textColorOneSelected">@android:color/holo_red_light</item>
        <item name="textColorOneUnSelected">@android:color/holo_blue_bright</item>
        <item name="textColorTwoSelected">@android:color/holo_red_dark</item>
        <item name="textColorTwoUnSelected">@android:color/holo_blue_dark</item>

        <item name="textColorEnableSelected">@android:color/holo_red_light</item>
        <item name="textColorEnableUnSelected">@android:color/holo_blue_bright</item>
        <item name="textColorDisableSelected">@android:color/holo_red_dark</item>
        <item name="textColorDisableUnSelected">@android:color/holo_blue_dark</item>
    </style>

    <style name="AppTheme.Green">
        <item name="pageRootBg">@android:color/holo_green_light</item>
        <item name="seekThumbColor">#FF5722</item>
        <item name="seekProgressDrawableColor">#9C27B0</item>
        <item name="seekBg">#000</item>

        <item name="textColorOneSelected">@android:color/holo_green_light</item>
        <item name="textColorOneUnSelected">@android:color/holo_orange_light</item>
        <item name="textColorTwoSelected">@android:color/holo_green_dark</item>
        <item name="textColorTwoUnSelected">@android:color/holo_orange_dark</item>

        <item name="textColorEnableSelected">@android:color/holo_green_light</item>
        <item name="textColorEnableUnSelected">@android:color/holo_orange_light</item>
        <item name="textColorDisableSelected">@android:color/holo_green_dark</item>
        <item name="textColorDisableUnSelected">@android:color/holo_orange_dark</item>
    </style>
    <!-- APPLY_THEME_END -->

    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="topic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_topic</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#77c353</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="btn.red">
        <item name="android:background">@android:color/holo_red_light</item>
    </style>

    <style name="btn.small">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="btn.small.red">
        <item name="android:background">@android:color/holo_red_light</item>
    </style>

    <style name="tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv.small">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
    </style>

    <style name="div.big">
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="div.vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="div.vertical.big">
        <item name="android:layout_width">5dp</item>
    </style>
</resources>
