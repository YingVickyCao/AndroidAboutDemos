<resources>

    <style name="Widget" />
    <style name="topic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_topic</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#77c353</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

    <style name="btn.red">
        <item name="android:background">@android:color/holo_red_light</item>
    </style>

    <style name="btn.small">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="btn.small.red">
        <item name="android:background">@android:color/holo_red_light</item>
    </style>

    <style name="btn.small.green">
        <item name="android:background">@android:color/holo_green_light</item>
    </style>

    <style name="tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

    <style name="tv.small">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
    </style>

    <style name="div.big">
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="div.vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="div.vertical.big">
        <item name="android:layout_width">5dp</item>
    </style>
</resources>
