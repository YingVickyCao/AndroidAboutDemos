<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义一个属性 -->
    <!--<attr name="duration" />-->
    <attr name="duration" format="integer" />

    <!-- 定义一个styleable对象来组合多个属性 -->
    <declare-styleable name="AlphaImageView">
        <attr name="duration" />
    </declare-styleable>

    <declare-styleable name="MessageState">
        <attr name="state_message_unread" format="boolean" />
        <attr name="state_message_read" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomViews">
        <attr name="MyViewStyle" format="reference" />
        <attr name="rectViewStyle" format="reference" />
        <attr name="ColorsIntegerArray" format="reference" />
    </declare-styleable>

    <declare-styleable name="MyView">
        <attr name="bgColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="RectView">
        <attr name="rvText" format="reference" />
        <attr name="rvSize" format="dimension" />
    </declare-styleable>

</resources>