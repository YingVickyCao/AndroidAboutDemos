<?xml version= "1.0" encoding ="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 最上层的drawable边缘与内容之间的padding = 偏移 -->
    <item android:bottom="10px">

        <shape android:shape="rectangle">
            <solid android:color="#ff0000" />
            <!-- 圆角20 -->
            <corners android:radius="20dp" />

        </shape>
    </item>

    <!-- 当前层与上层之间的 padding  = 偏移 -->
    <item
        android:bottom="20px"
        android:right="20px"
        android:start="20px"
        android:top="20px">
        <shape android:shape="rectangle">
            <solid android:color="#2bc7a3" />

            <corners android:radius="2dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>