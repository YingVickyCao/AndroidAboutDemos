<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_listener_4_inner_class"
                style="@style/btn.small"
                android:text="@string/listener_type_inner_class"
                android:visibility="visible" />

            <Button
                android:id="@+id/test_listener_4_outer_class"
                style="@style/btn.small"
                android:text="@string/listener_type_outer_class"
                android:visibility="visible" />

            <Button
                android:id="@+id/test_listener_4_activity_itself"
                style="@style/btn.small"
                android:text="@string/listener_type_activity_itself"
                android:visibility="visible" />

            <Button
                android:id="@+id/test_listener_4_anonymous_inner_class"
                style="@style/btn.small"
                android:text="@string/listener_type_4_anonymous_inner_class"
                android:visibility="visible" />

            <Button
                android:id="@+id/test_listener_4_xml"
                style="@style/btn.small"
                android:text="@string/listener_type_4_xml"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>