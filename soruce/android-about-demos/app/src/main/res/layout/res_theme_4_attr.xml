<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_theme_attr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/GreenText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/text"
                android:textAllCaps="false" />

            <Button
                style="@style/GreenText.Large"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/text"
                android:textAllCaps="false" />

            <Button
                style="@style/GreenText2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/text"
                android:textAllCaps="false" />
        </LinearLayout>

        <View style="@style/div" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/color1"
                style="@style/tv.small"
                android:text="@string/color_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/tv"
                android:text="@string/use_color_in_integer_array"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/color2"
                style="@style/tv.small"
                android:text="@string/color_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/div" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/color3"
                style="@style/tv.small"
                android:text="@string/color_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/tv"
                android:text="@string/get_attr"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/color4"
                style="@style/tv.small"
                android:text="@string/color_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/div" />

        <TextView
            android:id="@+id/useStyle"
            style="@style/btn.small"
            android:layout_gravity="center_horizontal"
            android:text="@string/user_style"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>