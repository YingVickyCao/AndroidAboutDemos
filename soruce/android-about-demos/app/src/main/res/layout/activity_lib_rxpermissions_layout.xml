<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sample_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/rxPermissions_topic" />

    <Button
        android:id="@+id/sendMessage"
        style="@style/btn"
        android:text="@string/send_message" />

    <Button
        android:id="@+id/receiveMessage"
        style="@style/btn"
        android:text="@string/receive_message" />

    <Button
        android:id="@+id/sendReceiveMessage"
        style="@style/btn"
        android:text="@string/send_receive_message" />

    <Button
        android:id="@+id/permissionGroup"
        style="@style/btn"
        android:text="@string/request_permission_by_permission_group" />
</LinearLayout>
