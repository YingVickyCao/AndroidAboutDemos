<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_Intent_and_Intent_Filter_Component" />

    <TextView
        android:id="@+id/pageDesc"
        style="@style/tv"
        android:layout_above="@+id/btns"
        android:layout_below="@+id/topic"
        android:text="One"
        android:textColor="@android:color/holo_blue_bright" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/open1"
            style="@style/btn.small"
            android:gravity="start"
            android:text="ComponentName(Context pkg, Class cls) - Activity" />

        <Button
            android:id="@+id/open2"
            style="@style/btn.small"
            android:text="ComponentName(Context pkg, Class cls) - Application" />

        <Button
            android:id="@+id/open3"
            style="@style/btn.small"
            android:gravity="start"
            android:text="ComponentName(String pkg, String cls)" />

        <Button
            android:id="@+id/open4"
            style="@style/btn.small"
            android:gravity="start"
            android:text="ComponentName(Context pkg, String cls)" />

        <View style="@style/div" />

        <Button
            android:id="@+id/open5"
            style="@style/btn.small"
            android:gravity="start"
            android:text="Intent.setClass(Context pkg, Class cls)" />

        <Button
            android:id="@+id/open6"
            style="@style/btn.small"
            android:gravity="start"
            android:text="Intent.setClass(String pkg, String cls)" />

        <Button
            android:id="@+id/open7"
            style="@style/btn.small"
            android:gravity="start"
            android:text="Intent.setClass(Context pkg, String cls)" />
    </LinearLayout>
</RelativeLayout>