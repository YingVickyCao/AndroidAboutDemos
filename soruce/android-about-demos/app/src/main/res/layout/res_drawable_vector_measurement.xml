<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_check_vector_rendering_time" />

    <com.hades.example.android.android_about_demos.resource.drawable.vector.MeasurableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/drawable_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/vector_drawable_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vector_drawable" />

        <RadioButton
            android:id="@+id/png_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/png" />
    </RadioGroup>

    <TextView
        android:id="@+id/checkRenderTime"
        style="@style/btn.small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/check_render_time" />
</RelativeLayout>