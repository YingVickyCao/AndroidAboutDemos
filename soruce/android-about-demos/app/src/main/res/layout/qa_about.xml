<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic.orange"
        android:text="@string/page_qa_about_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/redBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/checkIfHaveAddedView"
                    style="@style/btn.small"
                    android:text="@string/check_if_have_added_view" />
            </LinearLayout>

            <Button
                android:id="@+id/frameLayoutLayoutGravity"
                style="@style/btn.small"
                android:text="@string/frameLayout_layout_gravity" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:background="@android:color/holo_red_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_50"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_green_light"
                    android:gravity="center"
                    android:text="@string/frameLayout_layout_gravity_center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:background="@android:color/holo_blue_bright">

                <TextView
                    android:id="@+id/textViewInFrameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_50"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/frameLayout_layout_gravity_center" />
            </FrameLayout>

            <Button
                android:id="@+id/linearLayoutLayoutGravity"
                style="@style/btn.small"
                android:text="@string/linearLayout_layout_gravity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:background="@android:color/holo_red_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_50"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_green_light"
                    android:gravity="center"
                    android:text="@string/linearLayout_layout_gravity_center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:background="@android:color/holo_blue_bright"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewInLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_50"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/linearLayout_layout_gravity_center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>