<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/subject"
        style="@style/topic"
        android:text="@string/test_recyclerView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/findItemView"
            style="@style/btn.small"
            android:text="Find item view" />

        <Button
            android:id="@+id/findViewByPosition"
            style="@style/btn.small"
            android:text="findView By Position" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scrollToPosition"
            style="@style/btn.small"
            android:text="Scroll to position" />

        <Button
            android:id="@+id/smoothScrollToPosition"
            style="@style/btn.small"
            android:text="Smooth scroll to position" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:paddingTop="@dimen/size_15">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/white"
            android:fadeScrollbars="false"
            android:paddingStart="@dimen/size_15"
            android:paddingEnd="@dimen/size_15"
            android:scrollbarFadeDuration="500"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarThumbVertical="@drawable/drawable_shape_4_divider_vertical_green"
            android:scrollbars="vertical" />
    </FrameLayout>
    <!--android:scrollIndicators=""-->
</LinearLayout>