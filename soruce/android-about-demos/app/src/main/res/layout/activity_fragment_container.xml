<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_Fragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/showFragment1"
            style="@style/btn.small"
            android:text="Show fragment 1" />

        <Button
            android:id="@+id/showFragment2"
            style="@style/btn.small"
            android:layout_alignParentEnd="true"
            android:text="Show fragment 2" />

    </RelativeLayout>

    <!-- fragmentContainer1 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/replaceBy1"
            style="@style/btn.small"
            android:text="Replace by 1" />

        <Button
            android:id="@+id/replaceBy2"
            style="@style/btn.small"
            android:layout_alignParentEnd="true"
            android:text="Replace by 2" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragmentContainer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/fragmentContainer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>