<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/testEventHandlerBaseOnListener"
                style="@style/btn.small"
                android:text="@string/test_event_handler_base_on_listener"
                android:visibility="gone" />

            <Button
                android:id="@+id/testEventHandlerBaseOnListener4Plane"
                style="@style/btn.small"
                android:text="@string/test_event_handler_base_on_listener_4_plane"
                android:visibility="gone" />

            <Button
                android:id="@+id/test_event_handler_base_on_listener_types"
                style="@style/btn.small"
                android:text="@string/test_event_handler_base_on_listener_types"
                android:visibility="visible" />

            <Button
                android:id="@+id/test_event_handler_base_on_callback"
                style="@style/btn.small"
                android:text="@string/test_event_handler_base_on_callback"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>