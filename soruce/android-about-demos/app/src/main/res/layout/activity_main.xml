<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="Android About Test Code" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/pageSecurity"
                style="@style/btn.small"
                android:text="@string/page_security" />

            <Button
                android:id="@+id/pageWidget"
                style="@style/btn.small"
                android:text="Widget" />

            <Button
                android:id="@+id/pageDateStorage"
                style="@style/btn.small"
                android:text="@string/page_data_storage" />

            <Button
                android:id="@+id/pageQAAboutView"
                style="@style/btn.small"
                android:text="@string/page_qa_about_view" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>