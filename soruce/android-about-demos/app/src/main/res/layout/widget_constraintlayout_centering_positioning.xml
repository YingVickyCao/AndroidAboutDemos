<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_ConstraintLayout" />

    <!-- START_CENTER_POSITING_AND_BIAS -->
    <!-- Centering Positioning -->
    <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstrainLayoutStyle.Large">

        <!-- 居中 -->
        <Button
            style="@style/btn.small"
            android:text="A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Centering Positioning with Bias -->
    <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstrainLayoutStyle.Large">

        <!-- 垂直居中，水平= 2:8 -->
        <Button
            style="@style/btn.small"
            android:text="A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Centering Positioning with Bias -->
    <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstrainLayoutStyle.Large">

        <!-- 垂直= 2:8，水平居中 -->
        <Button
            style="@style/btn.small"
            android:text="A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Centering Positioning with Bias -->
    <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstrainLayoutStyle.Large">

        <!-- 垂直= 2:8，水平=2：8 -->
        <Button
            style="@style/btn.small"
            android:text="A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- END_CENTER_POSITING_AND_BIAS -->
</LinearLayout>