<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_CustomView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@color/dark_bg_0"
            android:gravity="center"
            android:orientation="vertical">

            <com.hades.example.android.widget.custom_view.LightMyView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80" />

            <View style="@style/div" />

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:background="@color/dark_m_0_opacity_80"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@color/light_bg_0"
            android:gravity="center"
            android:orientation="vertical">

            <com.hades.example.android.widget.custom_view.DarkMyView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80" />

            <View style="@style/div" />

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:background="@color/light_m_0_opacity_30"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="?attr/bg_0"
            android:gravity="center"
            android:orientation="vertical">

            <com.hades.example.android.widget.custom_view.MyView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80" />

            <View style="@style/div" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/div.big" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/setLightTheme"
            style="@style/btn.small"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="@string/light_theme" />

        <Button
            android:id="@+id/setDarkTheme"
            style="@style/btn.small"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="@string/dark_theme" />
    </RelativeLayout>
</LinearLayout>