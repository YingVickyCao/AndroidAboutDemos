<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_CustomView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/dark_bg_0"
        android:gravity="center"
        android:orientation="vertical">

        <com.hades.example.android.widget.custom_view.LightMyView
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100" />

        <View style="@style/div" />

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:background="@color/dark_m_0_opacity_80"
            android:gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_huge"
        android:background="@color/light_bg_0"
        android:gravity="center"
        android:orientation="vertical">

        <com.hades.example.android.widget.custom_view.DarkMyView
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100" />

        <View style="@style/div" />

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:background="@color/light_m_0_opacity_30"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>