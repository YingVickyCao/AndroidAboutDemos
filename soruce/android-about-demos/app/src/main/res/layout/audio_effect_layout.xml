<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_resource" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginTop="@dimen/size_topic"
        android:layout_marginEnd="@dimen/size_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/equalizerPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tv.small"
                    android:text="均衡器" />
            </LinearLayout>

            <View style="@style/div" />

            <LinearLayout
                android:id="@+id/presetReverbPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tv.small"
                    android:text="预设音场" />

                <Spinner
                    android:id="@+id/presetReverbSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <View style="@style/div" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tv.small"
                    android:text="重低音" />

                <SeekBar
                    android:id="@+id/bassBoostSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.hades.example.android.media.audio.audio_effect.VisualizerView
                    android:id="@+id/visualizerView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                </com.hades.example.android.media.audio.audio_effect.VisualizerView>
            </LinearLayout>

            <View style="@style/div" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tv.small"
                    android:text="回音消除" />

                <Switch
                    android:id="@+id/toggleAcousticEchoCanceler"
                    android:layout_width="wrap_content"
                    android:textOff="@string/off"
                    android:textOn="@string/on"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/div" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tv.small"
                    android:text="自动增益控制" />

                <Switch
                    android:id="@+id/toggleAutomaticGainControl"
                    android:layout_width="wrap_content"
                    android:textOff="@string/off"
                    android:textOn="@string/on"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/div" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tv.small"
                    android:text="噪音压制" />

                <Switch
                    android:id="@+id/toggleNoiseSuppressor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="@string/off"
                    android:textOn="@string/on" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>