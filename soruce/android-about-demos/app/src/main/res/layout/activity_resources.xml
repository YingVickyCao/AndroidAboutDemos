<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_widget" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_topic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/parseMaterial"
                style="@style/btn.small"
                android:text="原始资源" />

            <Button
                android:id="@+id/pageColor"
                style="@style/btn.small"
                android:text="@string/page_Color" />

            <Button
                android:id="@+id/pageColorStateListResource"
                style="@style/btn.small"
                android:text="@string/page_ColorStateList" />

            <Button
                android:id="@+id/pageSwitchColorInTheme"
                style="@style/btn.small"
                android:text="@string/page_switch_color_in_theme" />

            <Button
                android:id="@+id/pageThemeAndStyle"
                style="@style/btn.small"
                android:text="@string/page_theme_and_style" />

            <Button
                android:id="@+id/pageInternationalization"
                style="@style/btn.small"
                android:text="国际化" />

            <Button
                android:id="@+id/pageStringIntegerArray"
                style="@style/btn.small"
                android:text="@string/page_String_and_Integer_and_Array" />

            <Button
                android:id="@+id/pageParseXML"
                style="@style/btn.small"
                android:text="XML" />

            <View style="@style/div" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support different screens" />

            <Button
                android:id="@+id/pageScreenOrientation"
                style="@style/btn.small"
                android:text="屏幕方向" />

            <Button
                android:id="@+id/pageScreenSize"
                style="@style/btn.small"
                android:text="屏幕尺寸" />

            <Button
                android:id="@+id/pageDrawableAndScreenDensity"
                style="@style/btn.small"
                android:text="@string/page_bitmap_4_screen_density_and_drawable_memory" />

            <View style="@style/div" />

            <Button
                android:id="@+id/pageVectorDrawable"
                style="@style/btn.small"
                android:text="@string/page_drawable_vectorDrawable" />

            <Button
                android:id="@+id/pageCheckVectorRenderingTime"
                style="@style/btn.small"
                android:text="@string/page_check_vector_rendering_time" />

            <Button
                android:id="@+id/pageLoadBitmapPo"
                style="@style/btn.small"
                android:text="@string/page_decode_sampled_bitmap" />

            <Button
                android:id="@+id/pageMemoryCacheBitmap"
                style="@style/btn.small"
                android:text="@string/page_bitmap_three_level_cache" />

            <Button
                android:id="@+id/pageBitmap"
                style="@style/btn.small"
                android:text="@string/page_bitmap" />

            <Button
                android:id="@+id/pageShapeDrawable"
                style="@style/btn.small"
                android:text="@string/page_ShapeDrawable" />

            <Button
                android:id="@+id/pageLevelListDrawable"
                style="@style/btn.small"
                android:text="@string/page_LevelListDrawable" />

            <Button
                android:id="@+id/pageDrawableFolder"
                style="@style/btn.small"
                android:text="@string/page_DrawableFolder" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>