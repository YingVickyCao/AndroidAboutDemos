<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_widget" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_topic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/pageLoadBitmapPo"
                style="@style/btn.small"
                android:text="@string/page_load_bitmap_po" />

            <Button
                android:id="@+id/parseMaterial"
                style="@style/btn.small"
                android:text="原始资源" />

            <Button
                android:id="@+id/theme"
                style="@style/btn.small"
                android:text="Theme" />

            <Button
                android:id="@+id/internationalization"
                style="@style/btn.small"
                android:text="国际化" />

            <Button
                android:id="@+id/array"
                style="@style/btn.small"
                android:text="数组" />

            <Button
                android:id="@+id/parseXML"
                style="@style/btn.small"
                android:text="XML" />

            <View style="@style/div" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support different screens" />

            <Button
                android:id="@+id/pageScreenOrientation"
                style="@style/btn.small"
                android:text="屏幕方向" />

            <Button
                android:id="@+id/pageScreenSize"
                style="@style/btn.small"
                android:text="屏幕尺寸" />

            <Button
                android:id="@+id/pageDrawableAndScreenDensity"
                style="@style/btn.small"
                android:text="@string/page_provide_screen_density_bitmaps" />

            <View style="@style/div" />

            <Button
                android:id="@+id/pageVectorDrawable"
                style="@style/btn.small"
                android:text="@string/page_drawable_vectorDrawable" />

            <Button
                android:id="@+id/pageCheckVectorRenderingTime"
                style="@style/btn.small"
                android:text="@string/page_check_vector_rendering_time" />

            <Button
                android:id="@+id/pageManagingBitmapMemory"
                style="@style/btn.small"
                android:text="@string/page_managing_bitmap_memory" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>