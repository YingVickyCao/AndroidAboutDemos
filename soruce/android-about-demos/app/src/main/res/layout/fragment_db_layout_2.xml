<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/insertBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/insert" />

                <Button
                    android:id="@+id/insertBundlesBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/insert_bundles" />

                <Button
                    android:id="@+id/deleteBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/delete" />

                <Button
                    android:id="@+id/deleteTableAllDataBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/delete_table_data" />

                <Button
                    android:id="@+id/updateBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/update" />

                <Button
                    android:id="@+id/queryBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/query" />

                <Button
                    android:id="@+id/createTableBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/create_table" />

                <Button
                    android:id="@+id/deleteTableBtnClick"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="@string/delete_table" />

                <Button
                    android:id="@+id/clear"
                    style="@style/btn.small"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_red_dark"
                    android:text="@string/clear" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ListView
            android:id="@+id/tableContentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>