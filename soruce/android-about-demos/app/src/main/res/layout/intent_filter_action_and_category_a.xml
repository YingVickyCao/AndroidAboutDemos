<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_Intent_and_Intent_Filter_action_and_category" />

    <TextView
        android:id="@+id/desc"
        style="@style/tv"
        android:layout_below="@+id/topic"
        android:text="A"
        android:textColor="@android:color/holo_red_light" />

    <ScrollView
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/action0"
                style="@style/btn.small"
                android:text="Action0" />

            <Button
                android:id="@+id/action1"
                style="@style/btn.small"
                android:text="Action1" />

            <Button
                android:id="@+id/action2"
                style="@style/btn.small"
                android:text="Action2" />

            <Button
                android:id="@+id/action1_action2"
                style="@style/btn.small"
                android:text="Action1, Action2" />

            <Button
                android:id="@+id/category_2"
                style="@style/btn.small"
                android:text="Category2" />

            <Button
                android:id="@+id/action1_category1_category3"
                style="@style/btn.small"
                android:text="Action1,Category1,Category3" />

            <Button
                android:id="@+id/action1_category1_category2"
                style="@style/btn.small"
                android:text="Action1,Category1,Category2" />

            <Button
                android:id="@+id/action1_category1_categoryDefault"
                style="@style/btn.small"
                android:text="Action1,Category1,Category Default" />

            <Button
                android:id="@+id/action1_categoryDefault"
                style="@style/btn.small"
                android:text="Action1 , Category Default" />

            <Button
                android:id="@+id/action1_category3"
                style="@style/btn.small"
                android:text="Action1 , Category3" />

            <Button
                android:id="@+id/action1_category2"
                style="@style/btn.small"
                android:text="Action1 , Category2" />

            <Button
                android:id="@+id/action3_categoryDefault"
                style="@style/btn.small"
                android:text="Action3 , Category Default" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
