<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_thread_2_main_update_text"
                style="@style/btn.small"
                android:text="@string/test_msg_handler_thread_2_main_update_text"
                android:visibility="gone" />

            <Button

                android:id="@+id/test_main_2_thread_sum"
                style="@style/btn.small"
                android:text="@string/test_msg_handler_main_2_thread_sum"
                android:visibility="gone" />

            <Button
                android:id="@+id/test_main_2_thread_2_main_Sum"
                style="@style/btn.small"
                android:text="@string/test_msg_handler_main_2_thread_2_main_Sum"
                android:visibility="visible" />

            <Button
                android:id="@+id/test_main_2_thread_2_main_Sum2"
                style="@style/btn.small"
                android:text="@string/test_msg_handler_main_2_thread_2_main_Sum"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>