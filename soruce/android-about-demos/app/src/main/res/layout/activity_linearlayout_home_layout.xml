<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        style="@style/topic"
        android:text="@string/page_linearLayout" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/topic_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/tv"
                android:gravity="left"
                android:text="按钮居中显示名，并且占据其父视图宽度得一半?" />

            <Button
                android:id="@+id/linearlayout1"
                style="@style/btn.small"
                android:text="@string/linearlayout_1"
                android:visibility="visible" />

            <TextView
                style="@style/tv"
                android:gravity="left"
                android:text="按钮居中显示名，layout_width = 50, weight占据其父视图sum一半？" />

            <Button
                android:id="@+id/linearlayout2"
                style="@style/btn.small"
                android:text="@string/linearlayout_2"
                android:visibility="visible" />

            <TextView
                style="@style/tv"
                android:gravity="left"
                android:text="验证：\n先分配android:layout_width(layout_height)具体尺寸，然后再按layout_weight/weightSum分配宽度(高度)" />

            <Button
                android:id="@+id/linearlayout3"
                style="@style/btn.small"
                android:text="@string/linearlayout_3"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>