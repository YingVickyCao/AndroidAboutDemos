<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_ShapeDrawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topic">

        <Button
            android:id="@+id/checkIntrinsicHeight"
            style="@style/btn.small"
            android:text="getIntrinsicHeight()" />

        <View style="@style/div" />

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:background="@drawable/drawable_shape_4_ring" />

        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@android:color/holo_red_dark" />

        <View style="@style/div" />

        <TextView
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_20"
            android:background="@drawable/drawable_shape_4_line" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>