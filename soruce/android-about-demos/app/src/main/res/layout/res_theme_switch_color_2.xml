<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/topic"
        android:text="Switch Color in Theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/pageRootBg"
            android:backgroundTint="?attr/pageRootBg"
            android:gravity="center" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setRedTheme"
                style="@style/btn.small"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="@string/red_theme" />

            <Button
                android:id="@+id/setGreenTheme"
                style="@style/btn.small"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="@string/green_theme" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectTab1"
                style="@style/btn.small"
                android:text="Select tab 1" />

            <Button
                android:id="@+id/selectTab2"
                style="@style/btn.small"
                android:layout_alignParentEnd="true"
                android:text="Select tab 2" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>