<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_activity" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_topic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/pageActivityLifecycle"
                style="@style/btn.small"
                android:text="Activity Lifecycle" />

            <Button
                android:id="@+id/pageGetViewSizeInActivityOncreate"
                style="@style/btn.small"
                android:text="@string/page_get_view_size_in_activity_oncreate" />

            <Button
                android:id="@+id/pageSaveAndRestoreState"
                style="@style/btn.small"
                android:text="@string/page_activity_save_and_restore_state" />

            <Button
                android:id="@+id/pageLauncherActivity"
                style="@style/btn.small"
                android:text="@string/page_LauncherActivity" />

            <Button
                android:id="@+id/pageLaunchMode"
                style="@style/btn.small"
                android:text="@string/page_LaunchMode" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>