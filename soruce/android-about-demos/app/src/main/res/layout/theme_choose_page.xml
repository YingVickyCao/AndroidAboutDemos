<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pageRootBg">

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/page_a"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/setRedTheme"
        style="@style/btn.small"
        android:layout_alignParentBottom="true"
        android:text="@string/red_theme" />

    <Button
        android:id="@+id/jumpB"
        style="@style/btn.small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/jump_page_b" />

    <Button
        android:id="@+id/setGreenTheme"
        style="@style/btn.small"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/green_theme" />
</RelativeLayout>