<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_media" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_topic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/pageMediaPlayerPlayAudio"
                style="@style/btn.small"
                android:text="@string/page_MediaPlayer_play_audio" />

            <Button
                android:id="@+id/pageAudioEffect"
                style="@style/btn.small"
                android:text="@string/page_AudioEffect" />

            <Button
                android:id="@+id/pageSoundPoolPlayAudio"
                style="@style/btn.small"
                android:text="@string/page_SoundPool_play_audio" />

            <Button
                android:id="@+id/pageVideoViewPlayVideo"
                style="@style/btn.small"
                android:text="@string/page_VideoView_play_video" />

            <Button
                android:id="@+id/pageSurfaceViewPlayVideo"
                style="@style/btn.small"
                android:text="@string/page_MediaPlayer_SurfaceView_play_video" />

            <Button
                android:id="@+id/pageRecordAudio"
                style="@style/btn.small"
                android:text="@string/page_MediaRecorder_Record_audio" />

            <Button
                android:id="@+id/pageCamera"
                style="@style/btn.small"
                android:text="@string/page_Camera" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>