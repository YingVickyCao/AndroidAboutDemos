<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        style="@style/btn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawable_layer_list_4_border_with_radius"
        android:text="LayerDrawable" />

    <Button
        style="@style/btn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="LayerDrawable" />

    <!-- 定义一个拖动条，并改变轨道外观 -->
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progressDrawable="@drawable/drawable_layer_list_4_seek_bar_progress_drawable" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drawable_layer_list_4_logo" />
</LinearLayout>