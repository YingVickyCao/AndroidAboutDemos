<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic.orange"
        android:text="@string/page_io" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/topic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/read"
                style="@style/btn.small"
                android:text="@string/read"
                android:textSize="10sp" />

            <Button
                android:id="@+id/write"
                style="@style/btn.small"
                android:text="@string/write"
                android:textSize="10sp" />

            <Button
                android:id="@+id/readSDCard"
                style="@style/btn.small"
                android:text="@string/read_sd_card"
                android:textSize="10sp" />

            <Button
                android:id="@+id/writeSDCard"
                style="@style/btn.small"
                android:text="@string/write_sdc_ard"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SD card Explore" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back2Parent"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@android:color/holo_red_dark"
                    android:text="Back to parent"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/currentPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <!-- 列出当前路径下所有文件的ListView -->
            <ListView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentPath"
                android:divider="#000"
                android:dividerHeight="1px" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>