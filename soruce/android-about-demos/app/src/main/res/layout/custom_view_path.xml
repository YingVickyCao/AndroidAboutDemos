<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_CustomView"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_5">


            <TextView
                style="@style/tv"
                android:text="Path - Triangle"
                android:visibility="visible" />

            <com.hades.example.android.widget.custom_view.path.Triangle
                android:layout_width="@dimen/size_200"
                android:layout_height="@dimen/size_100"
                android:visibility="visible" />

            <TextView
                style="@style/tv"
                android:text="Path - PathEffect"
                android:visibility="visible" />

            <com.hades.example.android.widget.custom_view.path.PathWithPathEffect
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>