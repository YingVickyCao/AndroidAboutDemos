    <LinearLayout
        android:id="@+id/notifyContainer"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_red_oval"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/startSplashNotifyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_splash_notify_icon"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/changeViewVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_view_visibility"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stopSplashNotifyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_splash_notify_icon"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>