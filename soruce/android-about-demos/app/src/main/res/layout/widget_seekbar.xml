<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_seekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- progress_horizontal.xml
     progress_horizontal_material.xml-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_topic"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="40"
            android:progressDrawable="@drawable/progress_horizontal"
            android:secondaryProgress="60"
            android:thumb="@drawable/seek_thumb" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:progress="40"
            android:progressDrawable="@drawable/progress_horizontal_holo_light"
            android:secondaryProgress="60"
            android:thumb="@drawable/scrubber_control_selector_holo"
            android:thumbOffset="7dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/control_background_32dp_material_app"
            android:max="100"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:progress="40"
            android:progressDrawable="@drawable/progress_horizontal_material"
            android:secondaryProgress="60"
            android:splitTrack="true"
            android:thumb="@drawable/seekbar_thumb_material_anim"
            android:thumbOffset="7dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:progress="40"
            android:secondaryProgress="60"
            android:splitTrack="true"
            android:thumbTint="@color/green" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>