<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/simpleNotify"
            style="@style/btn.small"
            android:layout_gravity="center_horizontal"
            android:text="发送Notification" />

        <Button
            android:id="@+id/del"
            style="@style/btn.small"
            android:layout_gravity="center_horizontal"
            android:text="删除Notification" />

        <Button
            android:id="@+id/progressNotification"
            style="@style/btn.small"
            android:layout_gravity="center_horizontal"
            android:text="Progress Notification" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>