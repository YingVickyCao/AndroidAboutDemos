<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/btn"
                android:text="@string/normal_button" />

            <TextView
                style="@style/tv"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="@string/useButton2AvoidCheckEditedInputDate" />

            <Button
                android:id="@+id/details_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:gravity="center_vertical" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="@string/custom_button_shadow" />


            <Button
                style="@style/btn"
                android:elevation="100dp"
                android:text="Custom elevation Button" />

            <Button
                style="@style/btn"
                android:background="@drawable/btn_default_material"
                android:stateListAnimator="@animator/button_state_list_anim_material"
                android:text="Blue Button" />

            <Button
                style="@style/btn"
                android:background="@drawable/btn_default_material"
                android:stateListAnimator="@null"
                android:text="Blue Borderless Button" />

            <Button
                style="@style/btn"
                android:background="@drawable/btn_borderless_material"
                android:stateListAnimator="@null"
                android:text="Borderless Button" />

            <Button
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borderless Button"
                android:textAllCaps="false" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borderless Button"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
