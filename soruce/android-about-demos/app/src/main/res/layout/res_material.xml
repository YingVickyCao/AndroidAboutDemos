<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_material" />

    <Button
        android:id="@+id/playRaw"
        style="@style/btn.small"
        android:text="play raw 原始资源" />

    <Button
        android:id="@+id/playAsserts"
        style="@style/btn.small"
        android:text="play asserts 原始资源" />

    <Button
        android:id="@+id/loadAssertsImg"
        style="@style/btn.small"
        android:text="Load asserts Image" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>