<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_reduce_hierarchy" />

    <TextView
        style="@style/tv"
        android:layout_marginTop="10dp"
        android:text="LinearLayout(Before)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark" />

        <!--SESSION:Lint -->
        <!--SESSION:删除无用属性 -->
        <!--android:layout_centerInParent="true"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/tv"
        android:layout_marginTop="10dp"
        android:text="RelativeLayout(After)" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/left"
            android:background="@android:color/holo_green_dark" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/top"
            android:layout_toEndOf="@+id/left"
            android:background="@android:color/holo_orange_dark" />

    </RelativeLayout>

    <TextView
        style="@style/tv"
        android:layout_marginTop="10dp"
        android:text="ConstraintLayout(After)" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/left2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/top2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:background="@android:color/holo_green_dark"
            app:layout_constraintBottom_toTopOf="@+id/bottom2"
            app:layout_constraintLeft_toRightOf="@+id/left2" />

        <Button
            android:id="@+id/bottom2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintBottom_toBottomOf="@+id/top2"
            app:layout_constraintLeft_toRightOf="@+id/left2" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>