<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        style="@style/topic"
        android:text="@string/page_reduce_overdraw" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/topic_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/reduceUnneededBackgrounds"
                style="@style/btn.small"
                android:text="@string/page_reduce_overdraw_4_remove_unneeded_backgrounds" />

            <Button
                android:id="@+id/reduceOverdrawInCustomView"
                style="@style/btn.small"
                android:text="@string/page_reduce_overdraw_4_custom_view" />

            <Button
                android:id="@+id/reduceTransparentAnimations"
                style="@style/btn.small"
                android:text="@string/page_reduce_overdraw_4_Reduce_transparent_animations" />

            <Button
                android:id="@+id/reduceTransparentImageView"
                style="@style/btn.small"
                android:text="@string/page_reduce_overdraw_4_Reduce_transparent_imageview" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
