<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_start_norm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="使用Activity播放音乐" />

    <Button
        android:id="@+id/btn_pause_norm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="使用Activity pause播放音乐" />

    <Button
        android:id="@+id/btn_stop_norm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="使用Activity stop播放音乐" />

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick_Service"
        android:text="start" />

    <Button
        android:id="@+id/btn_pause_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick_Service"
        android:text="pause" />

    <Button
        android:id="@+id/btn_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick_Service"
        android:text="stop" />

</LinearLayout>